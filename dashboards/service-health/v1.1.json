{
  "dashboard": {
    "id": null,
    "uid": "service-health-dashboard",
    "title": "Service Health Dashboard v1.1",
    "tags": ["production", "health", "v1.1"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Service Uptime",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "refId": "A",
            "expr": "up{job=\"api-service\"}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Request Rate (v1.1 baseline)",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "refId": "A",
            "expr": "rate(http_requests_total[5m])"
          }
        ]
      }
    ]
  }
}
