{
  "dashboard": {
    "id": null,
    "uid": "service-health-dashboard",
    "title": "Service Health Dashboard v1.2",
    "tags": ["production", "health", "v1.2"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Service Uptime",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "refId": "A",
            "expr": "up{job=\"api-service\"}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Request Rate",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "refId": "A",
            "expr": "rate(http_requests_total[5m])"
          }
        ]
      },
      {
        "id": 3,
        "type": "gauge",
        "title": "Error Rate % (NEW in v1.2)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "refId": "A",
            "expr": "rate(http_errors_total[5m]) / rate(http_requests_total[5m]) * 100"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "percent"
          }
        }
      }
    ]
  }
}
